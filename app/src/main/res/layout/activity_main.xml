<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myapplication.presentation.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/serviceButtonContainer"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/iotHubServiceStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="IotHub"
            android:textAllCaps="false"
           />
        <Button
            android:id="@+id/serviceBusStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="Service Bus"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/goToJavascriptActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:text="Javascript function" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>